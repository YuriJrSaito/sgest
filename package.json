{
  "name": "sgest",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de revendedores",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --inspect=0.0.0.0:9229 src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "db:sync": "bash scripts/sync-database.sh",
    "db:sync:win": "powershell -ExecutionPolicy Bypass -File scripts/sync-database.ps1",
    "db:reset": "bash scripts/reset-database.sh -f",
    "db:reset:win": "powershell -ExecutionPolicy Bypass -File scripts/reset-database.ps1 -Force",
    "db:hash": "tsx scripts/generate-password-hash.ts",
    "guardrails:arch": "node scripts/architecture-guardrails.mjs",
    "test": "cross-env NODE_ENV=test DOTENV_CONFIG_QUIET=true jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test DOTENV_CONFIG_QUIET=true jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test DOTENV_CONFIG_QUIET=true jest --coverage --runInBand",
    "test:integration": "cross-env NODE_ENV=test DOTENV_CONFIG_QUIET=true jest --testPathPatterns=integration --runInBand",
    "test:unit": "cross-env NODE_ENV=test DOTENV_CONFIG_QUIET=true jest --testPathPatterns=unit --runInBand"
  },
  "keywords": [
    "fastify",
    "postgresql",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.4",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.4.1",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
